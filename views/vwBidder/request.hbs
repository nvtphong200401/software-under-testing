{{#section 'css'}}
    <link href="/public/css/request.css" rel="stylesheet" type="text/css">
{{/section}}

{{#section 'js'}}

{{/section}}

<div class="needs-validation text-center border border-light">
    <div class="wrapper">
        <div class="overlay">
            <nav class="navbar navbar-expand-lg text-white navbar-light mb-0 d-flex justify-content-between">
                <div>
                    <a class="navbar-brand ml-md-3 mr-md-5" href="/">
                        <h3 class="font-weight-bolder text-white">AuctionX</h3>
                    </a>
                </div>


                <div>
                    <button aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"
                            class="navbar-toggler" data-target="#navbarSupportedContent" data-toggle="collapse"
                            type="button">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ml-0 mr-auto">
                            <li class="nav-item">
                                <a class="nav-link text-white" href="/">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="#">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="#">Help</a>
                            </li>
                            {{#if auth}}

                                <li class="nav-item dropdown">
                                    <a class="nav-link text-white dropdown-toggle active" href="#" id="navbarDropdown"
                                       role="button"
                                       data-toggle="dropdown" aria-expanded="false">
                                        Hi, <b>{{authUser.Username}}</b>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" href="/bidder/profile">
                                            <i class="fa fa-user mr-1" aria-hidden="true"></i>
                                            Profile
                                        </a>

                                        <div class="dropdown-divider"></div>

                                        <a class="dropdown-item" href="/watchlist">
                                            <i class="fa fa-shopping-cart mr-1" aria-hidden="true"></i>
                                            My watchlist
                                        </a>

                                        <div class="dropdown-divider"></div>

                                        <form id="frmLogout" action="/auth/logout" method="post"></form>
                                        <a class="dropdown-item" href="javascript: $('#frmLogout').submit();">
                                            <i class="fa fa-sign-out mr-1" aria-hidden="true"></i>
                                            Sign Out
                                        </a>
                                    </div>
                                </li>

                            {{else}}
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="/auth/">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="/auth/">Sign Up</a>
                                </li>

                            {{/if}}
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="row d-flex justify-content-center align-items-center mx-0">
                <div class="col-md-9">
                    <div class="contact-us text-center">
                        <h3>Welcome to AuctionX <i class="fa fa-shopping-cart" aria-hidden="true"></i></h3>
                        <p class="mb-5">Feel free to contact us if you have any question!</p>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mt-5 text-center px-3">
                                    <div class="d-flex flex-row align-items-center"><span class="icons"><i
                                            class="fa fa-map-marker"></i></span>
                                        <div class="address text-left"><span>Address</span>
                                            <p>District 1 - HCM City - VN</p>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mt-3"><span class="icons"><i
                                            class="fa fa-phone"></i></span>
                                        <div class="address text-left"><span>Phone</span>
                                            <p>011 100 153 354</p>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mt-3"><span class="icons"><i
                                            class="fa fa-envelope-o"></i></span>
                                        <div class="address text-left"><span>Address</span>
                                            <p>auctionX@gmail.com</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="text-center px-1">
                                    <div class="forms p-4 py-5 bg-white mb-5 mx-2">
                                        <h5>Seller Request Form</h5>
                                        <div class="text-muted">Are you ready to become a seller?</div>

                                        <div class="mt-4 inputs">
                                            <div class="form-group text-left">
                                                <label class="text-left">Full name</label>
                                                <input type="text" class="form-control" placeholder="Your name" value="{{authUser.FullName}}" readonly>
                                            </div>
                                            <div class="form-group text-left">
                                                <label class="text-left">Email</label>
                                                <input type="text" class="form-control mb-5" placeholder="Your email address" value="{{authUser.Email}}" readonly>
                                            </div>
                                        </div>
                                        <div class="form-group ml-1">
                                            <div class="form-check text-left">
                                                <input class="form-check-input" type="checkbox" value=""
                                                       id="invalidCheck" required>
                                                <label class="form-check-label" for="invalidCheck">
                                                    Agree to <a href="javascript:">terms and conditions</a>
                                                </label>
                                                <div class="invalid-feedback">
                                                    You must agree before submitting.
                                                </div>
                                            </div>
                                        </div>
                                        <div class="button text-left">
                                            <form id="frmRequest" action="/bidder/request" method="post"></form>
                                            <a class="btn btn-success btn-lg btn-block"
                                                    href="javascript: $('#frmRequest').submit();">Submit</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

