<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light mb-0 d-flex justify-content-between">
    <div>
        <a class="navbar-brand ml-md-3 mr-md-5" href="/">
            <h3 class="font-weight-bolder">AuctionX</h3>
        </a>
    </div>

    <form class="form-inline my-3 ml-sm-auto mr-sm-0 ml-0 mr-auto " action="/search">
        <input id="search-bar" aria-label="Search" class="form-control mr-1"
               placeholder="Search for brand, color, .etc..." type="search" name="q">
        <button class="btn btn-success my-2 my-sm-0 text-white" type="submit">
            <i class="fa fa-search" aria-hidden="true"></i>
            <p class="d-none d-lg-inline">Search</p>
        </button>
    </form>

    <button aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"
            class="navbar-toggler" data-target="#navbarSupportedContent" data-toggle="collapse" type="button">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-0  mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">About</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Help</a>
            </li>
            {{#if auth}}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle active" href="#" id="navbarDropdown" role="button"
                       data-toggle="dropdown" aria-expanded="false">
                        Hi, <b>{{authUser.Username}}</b>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/bidder/profile">
                            <i class="fa fa-user mr-1" aria-hidden="true"></i>
                            Profile
                        </a>

                        <div class="dropdown-divider"></div>

                        <a class="dropdown-item" href="/watchlist">
                            <i class="fa fa-shopping-cart mr-1" aria-hidden="true"></i>
                            My watchlist
                        </a>
                        {{#if admin}}
                            <div class="dropdown-divider"></div>

                            <a class="dropdown-item" href="/admin">
                                <i class="fa fa-user-secret mr-1" aria-hidden="true"></i>
                                Admin
                            </a>
                        {{/if}}

                        <div class="dropdown-divider"></div>

                        <form id="frmLogout" action="/auth/logout" method="post"></form>
                        <a class="dropdown-item" href="javascript: $('#frmLogout').submit();">
                            <i class="fa fa-sign-out mr-1" aria-hidden="true"></i>
                            Sign Out
                        </a>
                    </div>
                </li>
                <li class="ml-sm-2 nav-item mt-sm-0 mt-3">
                     {{#if bidder}}
                         <a href="/bidder/request">
                             <button type="button" class="btn btn-outline-success btn-lg">Sell</button>
                         </a>
                     {{else}}
                         <a href="/seller/">
                             <button type="button" class="btn btn-outline-success btn-lg">Sell</button>
                         </a>
                     {{/if}}
                </li>
            {{else}}
                <li class="nav-item">
                    <a class="nav-link" href="/auth/">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/auth/">Sign Up</a>
                </li>
                <li class="ml-sm-2 nav-item mt-sm-0 mt-3">
                    <a href="/auth">
                        <button type="button" class="btn btn-outline-success btn-lg">Sell</button>
                    </a>
                </li>
            {{/if}}

        </ul>
    </div>


</nav>

{{{body}}}

